<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <include layout="@layout/toolbar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="@dimen/paddingLeftRight"
        android:orientation="vertical">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:src="@drawable/main_image"/>

        <EditText
            android:id="@+id/et_email"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="3dp"
            android:layout_weight="2"
            android:backgroundTint="@color/gray3"
            android:hint="@string/et_email"
            android:inputType="textEmailAddress"
            android:paddingLeft="@dimen/paddingLeftRight"
            android:paddingRight="@dimen/paddingLeftRight"
            android:textColor="@color/white"
            android:textColorHint="@color/white2"
            android:textSize="@dimen/text_size2" />

        <EditText
            android:id="@+id/et_password"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="3dp"
            android:layout_marginBottom="3dp"
            android:layout_weight="2"
            android:backgroundTint="@color/gray3"
            android:hint="@string/et_password"
            android:inputType="textPassword"
            android:paddingLeft="@dimen/paddingLeftRight"
            android:paddingRight="@dimen/paddingLeftRight"
            android:textColor="@color/white"
            android:textColorHint="@color/white2"
            android:textSize="@dimen/text_size2" />

        <Button
            android:id="@+id/btn_sign_in"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="7dp"
            android:layout_marginBottom="4dp"
            android:layout_weight="2"
            android:background="@drawable/ripple_btn_orange"
            android:text="@string/btn_sign_in"
            android:textAllCaps="false"
            android:textSize="@dimen/text_size2"
            android:elevation="10dp"
            android:translationZ="7dp" />

        <Button
            android:id="@+id/btn_registration"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="5dp"
            android:layout_weight="2"
            android:background="@drawable/ripple_btn_orange"
            android:text="@string/btn_registration"
            android:textAllCaps="false"
            android:textSize="@dimen/text_size2"
            android:textColor="@color/gray"/>

    </LinearLayout>

</LinearLayout>