<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="5dp"
    android:layout_marginBottom="5dp"
    android:id="@+id/parent_layout_rating_on_group"
    android:background="@color/orange_btn">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            android:background="@color/gray2"
            android:paddingLeft="@dimen/paddingLeftRight"
            android:paddingRight="@dimen/paddingLeftRight"
            android:layout_gravity="center_vertical">

            <TextView
                android:id="@+id/place_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="23dp"
                android:textStyle="bold"
                android:text="1"/>

        </LinearLayout>

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:id="@+id/text_name_student"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/paddingLeftRight"
                android:paddingLeft="@dimen/paddingLeftRight"
                android:paddingRight="@dimen/paddingLeftRight"
                android:paddingBottom="@dimen/paddingLeftRight"
                android:textColor="@color/gray2"
                android:textSize="@dimen/text_size2"
                android:text="Моисеев Леонид Олегович"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/text_rating"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/coral_btn"
                android:paddingBottom="@dimen/paddingTopBottom"
                android:paddingLeft="@dimen/paddingLeftRight"
                android:paddingRight="@dimen/paddingLeftRight"
                android:paddingTop="@dimen/paddingTopBottom"
                android:textColor="@color/gray2"
                android:textSize="@dimen/text_size2"
                android:text="Рейтинг: 245"/>

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>