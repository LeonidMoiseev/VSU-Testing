<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="5dp">

    <LinearLayout
        android:id="@+id/layout_stud_rating"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/orange_btn"
        android:visibility="gone"
        android:orientation="vertical">

        <TextView
            android:id="@+id/text_name_student"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/paddingLeftRight"
            android:paddingTop="@dimen/paddingTopBottom"
            android:paddingRight="@dimen/paddingLeftRight"
            android:text="Моисеев Леонид Олегович"
            android:textColor="@color/gray2"
            android:textSize="@dimen/text_size2"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/text_course_and_group"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/paddingLeftRight"
            android:paddingRight="@dimen/paddingLeftRight"
            android:paddingBottom="@dimen/paddingTopBottom"
            android:text="1 курс 7 группа"
            android:textColor="@color/gray2"
            android:textSize="@dimen/text_size2" />

        <TextView
            android:id="@+id/text_rating"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/coral_btn"
            android:paddingLeft="@dimen/paddingLeftRight"
            android:paddingTop="5dp"
            android:paddingRight="@dimen/paddingLeftRight"
            android:paddingBottom="5dp"
            android:text="Рейтинг: 245"
            android:textColor="@color/gray2"
            android:textSize="@dimen/text_size2" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="@dimen/paddingLeftRight"
            android:paddingRight="@dimen/paddingLeftRight"
            android:paddingBottom="@dimen/paddingTopBottom"
            android:paddingTop="@dimen/paddingTopBottom"
            android:background="@color/gray2">

            <TextView
                android:id="@+id/text_place_on_course"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Место на курсе: 1"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size2" />

            <TextView
                android:id="@+id/text_place_on_group"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Место в группе: 1"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size2" />

        </LinearLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/text_no_data"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:padding="@dimen/paddingLeftRight"
        android:text="@string/not_data_about_students"
        android:textColor="@color/white"
        android:textSize="@dimen/text_size2" />

</RelativeLayout>